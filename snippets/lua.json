{
  "Fold Marker Start": {
    "prefix": ["fold", "foldstart"],
    "body": [
      "-- {{{ $1",
      "$0"
    ],
    "description": "Insert fold start marker with comment"
  },

  "Fold Marker End": {
    "prefix": "foldend",
    "body": "-- }}} $1",
    "description": "Insert fold end marker with comment"
  },

  "Fold Block": {
    "prefix": "foldblock",
    "body": [
      "-- {{{ $1",
      "\t${TM_SELECTED_TEXT}",
      "-- }}} $1",
      "$0"
    ],
    "description": "Create fold block around selected text"
  },

  "Fold Region": {
    "prefix": ["fdm", "region"],
    "body": [
      "-- {{{ ${1:region description}",
      "$2",
      "-- }}} $1",
      "$0"
    ],
    "description": "Create named fold region"
  }
}
